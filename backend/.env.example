# PostgreSQL数据库连接（从Railway获取）
DATABASE_URL=postgresql://username:password@host:port/database_name

# 数据库连接池配置
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# JWT配置
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 文件上传配置
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=jpg,jpeg,png,webp

# 邮箱配置
SMTP_HOST=smtp.qq.com
SMTP_PORT=587
SMTP_USERNAME=your-email@qq.com
SMTP_PASSWORD=your-email-auth-code
SMTP_FROM_EMAIL=your-email@qq.com
SMTP_FROM_NAME=吉卜力AI

# 验证码配置
VERIFICATION_CODE_EXPIRE_MINUTES=5
VERIFICATION_CODE_LENGTH=6
MAX_VERIFICATION_ATTEMPTS=3
EMAIL_SEND_COOLDOWN_SECONDS=60

# API配置
UPSCALE_API_URL=https://api.example.com/upscale
UPSCALE_API_KEY=your-api-key-here
UPSCALE_API_TIMEOUT=30

# ComfyUI配置
COMFYUI_SERVER_ADDRESS=127.0.0.1:8188
COMFYUI_TEXT_TO_IMAGE_WORKFLOW=workflow/text_to_image_workflow.json
COMFYUI_UPSCALE_WORKFLOW=workflow/upscale_workflow.json
COMFYUI_INPUT_DIR=./comfyui_temp
COMFYUI_TIMEOUT=120